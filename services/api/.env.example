# Database Configuration
DATABASE_URL=postgresql://trivia_admin:local_dev_password@localhost:5432/trivianft

# AWS Configuration (for Bedrock question generation)
AWS_PROFILE=default
AWS_REGION=us-east-1

# Seed Script Configuration
BEDROCK_ENABLED=false
QUESTIONS_PER_CATEGORY=100

# Redis Configuration (for runtime)
REDIS_URL=redis://localhost:6379

# JWT Configuration (for runtime)
JWT_SECRET=your-jwt-secret-here

# Blockfrost Configuration (for runtime)
BLOCKFROST_API_KEY=your-blockfrost-api-key
BLOCKFROST_NETWORK=preprod

# S3 Configuration (for runtime)
S3_BUCKET_NAME=trivia-nft-assets
S3_REGION=us-east-1

# IPFS Configuration (for runtime)
IPFS_API_KEY=your-ipfs-api-key

# AppConfig Configuration (for runtime)
APPCONFIG_APPLICATION_ID=your-app-id
APPCONFIG_ENVIRONMENT_ID=your-env-id
APPCONFIG_CONFIGURATION_PROFILE_ID=your-profile-id

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
