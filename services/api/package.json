{
  "name": "@trivia-nft/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--experimental-wasm-modules tsx src/dev-server-with-db.ts",
    "dev:simple": "tsx src/local-server.ts",
    "build": "tsc && node --input-type=module -e \"import fs from 'fs'; fs.writeFileSync('dist/package.json', JSON.stringify({type:'module'}, null, 2))\"",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "seed:nft-assets": "tsx ../../scripts/generate-nft-assets.ts",
    "seed:nft-catalog": "tsx ../../scripts/seed-nft-catalog.ts",
    "seed:questions": "tsx ../../scripts/seed-questions.ts",
    "seed:all": "pnpm seed:nft-assets && pnpm seed:nft-catalog && pnpm seed:questions",
    "upload-images": "tsx ../../scripts/upload-nft-images-fixed.ts",
    "verify:neon": "tsx src/scripts/verify-neon-setup.ts",
    "test:upstash": "tsx src/scripts/test-upstash-redis.ts",
    "verify:inngest": "tsx src/scripts/verify-inngest-setup.ts",
    "verify:env": "tsx ../../scripts/verify-vercel-env.ts",
    "test:migration": "tsx src/scripts/test-neon-migration.ts",
    "backup:database": "tsx ../../scripts/backup-production-database.ts",
    "restore:database": "tsx ../../scripts/restore-to-neon.ts"
  },
  "dependencies": {
    "@blockfrost/blockfrost-js": "^5.4.0",
    "@emurgo/cardano-serialization-lib-nodejs": "^15.0.3",
    "@trivia-nft/shared": "workspace:*",
    "@upstash/redis": "^1.35.6",
    "inngest": "^3.46.0",
    "lucid-cardano": "^0.10.11",
    "node-pg-migrate": "^7.0.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.26.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
